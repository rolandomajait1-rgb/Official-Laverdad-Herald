APP_NAME=Laravel
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-backend.railway.app

# Database Configuration
# Supported: sqlite, mysql, pgsql
# For local development: DB_CONNECTION=sqlite (uses in-memory or file database)
# For production: Use mysql or pgsql with appropriate host/port credentials
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=railway
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
# Session Secure Cookies: defaults to true in production, must be false in local development
# Set to false only for local development with http://localhost
SESSION_SECURE_COOKIE=false
CACHE_STORE=database
QUEUE_CONNECTION=database

MAIL_MAILER=smtp
